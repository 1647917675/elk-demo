<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property resource="logback.properties"/>
    <jmxConfigurator/>
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <Target>System.out</Target>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%class:%line]  [userId:%X{userId}] [userName:%X{userName}] [ip:%X{Ip}] - %m%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>
    <appender name="LogFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${log.path}/${log.name}</File>
        <Append>true</Append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%class:%line]  [userId:%X{userId}] [userName:%X{userName}] [ip:%X{Ip}] - %m%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/${log.name}.%d{yyyy-MM-dd }</fileNamePattern>
            <maxHistory>2</maxHistory>
        </rollingPolicy>
    </appender>
    <appender name="ErrorFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${log.path}/${log.name.error}</File>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%class:%line]  [userId:%X{userId}] [userName:%X{userName}] [ip:%X{Ip}] - %m%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/${log.name.error}.%d{yyyy-MM-dd }</fileNamePattern>
            <maxHistory>2</maxHistory>
        </rollingPolicy>
    </appender>

    <springProperty scope="context" name="env" source="env" defaultValue="edas"/>
    <appender name="stash" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>192.168.126.132:4560</destination>
        <destination>192.168.126.132:4561</destination>
        <connectionStrategy>
            <preferPrimary>
                <!--<connectionTTL>1 minutes</connectionTTL>-->
                <secondaryConnectionTTL>1 minutes</secondaryConnectionTTL>
            </preferPrimary>
        </connectionStrategy>
        <filter class="com.example.demo.logger.XescmFilter">
            <level>INFO</level>
            <loggerName>com.example.demo</loggerName>
        </filter>
        <reconnectionDelay>1 second</reconnectionDelay>
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator> <!-- defaults to type ch.qos.logback.classic.boolex.JaninoEventEvaluator -->
                <expression>
                    if(logger.startsWith("com.example.demo")&amp;&amp; level > DEBUG )
                        return true;

                    return false;
                </expression>
            </evaluator>
            <OnMismatch>DENY</OnMismatch>
        </filter>
         <!--encoder is required-->
        <!--Both includeMdcKeyNames and excludeMdcKeyNames are not empty-->
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"appname":"mywebservice","env":"${env}"}</customFields>
            <includeMdcKeyName>key1</includeMdcKeyName>
        </encoder>
    </appender>


    <!-- ###################### DAO日志监控  ###################### -->
    <appender name="DaoStatistics" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/${log.name.sql}.%d{yyyy-MM-dd }</fileNamePattern>
            <maxHistory>10</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [userId:%X{userId}] [userName:%X{userName}] [ip:%X{Ip}] -%msg%n</pattern>
        </encoder>
    </appender>

    <!-- rpc日志采集-->
    <appender name="RpcLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${log.path}/${log.name.rpc}</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/${log.name.rpc}.%d{yyyy-MM-dd }</fileNamePattern>
            <maxHistory>10</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%m%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>
    <logger name="com.xescm.wms.factory.RpcLoggerFactory" additivity="false" >
        <level value="INFO"/>
        <appender-ref ref="RpcLog" />
    </logger>

    <logger name="com.xescm.wms.mapper" level="DEBUG">
        <appender-ref ref="DaoStatistics" />
    </logger>

    <logger name="org.springframework" level="DEBUG"/>
    <logger name="org.apache" level="DEBUG"/>
    <logger name="org.mybatis.spring" level="DEBUG"/>
    <logger name="org.springframework.web" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="Console"/>
        <appender-ref ref="LogFile"/>
        <appender-ref ref="ErrorFile"/>
        <appender-ref ref="stash"/>
    </root>


</configuration>
